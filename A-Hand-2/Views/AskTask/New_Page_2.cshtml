            $('#TaskStartDate').datetimepicker({
                defaultDate: '@Model.TaskStartDate',
                format: 'L',
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top'
            });
            @*$('#AnnualMeetingStartTime').datetimepicker({
                defaultDate: '@Model.TaskStartDate',
                format: 'LT',
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top',
                stepping: 15
